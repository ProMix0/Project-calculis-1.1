<UserControl x:Class="ClientShell.DropDownButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientShell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="this">
    <StackPanel>
    <Button x:Name="button" Click="ButtonClick">
        <ContentPresenter Content="{Binding ElementName=this, Path=ButtonContent}"/>
        
    </Button>
        <Popup x:Name="popup" StaysOpen="False" Placement="Relative">
            <ContentPresenter Content="{Binding ElementName=this,Path=DropDownContent}"/>
        </Popup>
    </StackPanel>
</UserControl>
