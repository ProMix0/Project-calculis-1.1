<UserControl x:Class="ClientShell.RegisterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientShell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Width="200">
        <TextBlock Margin="10 10 10 0">
            Введите логин:
        </TextBlock>
        <TextBox x:Name="loginBox" Margin="10 0 10 10" Background="LightGray"/>
        <TextBlock Margin="10 10 10 0">
            Введите адрес электронной почты:
        </TextBlock>
        <TextBox x:Name="mailBox" Margin="10 0 10 10" Background="LightGray"/>
        <TextBlock Margin="10 10 10 0" >
            Введите пароль:
        </TextBlock>
        <TextBox x:Name="passwordBox" Margin="10 0 10 10" Background="LightGray"/>
        <TextBlock Margin="10 10 10 0" >
            Повторите пароль:
        </TextBlock>
        <TextBox x:Name="passwordAgainBox" Margin="10 0 10 10" Background="LightGray"/>
        <Button Margin="15" Content="Войти" x:Name="loginButton"/>
    </StackPanel>
</UserControl>
